<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="https://nostrador.fr/wp-content/uploads/2019/02/piece-Nostrador-800x792-300x297.png">
    {#  @todo host l'icone  #}
    {% block stylesheets %}
        {{ ux_controller_link_tags() }}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
<nav class="navbar navbar-expand-lg bg-primary shadow">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_order_index') }}">
            <img src="https://nostrador.fr/wp-content/uploads/2019/02/piece-Nostrador-800x792-300x297.png" alt="Logo"
                 height="24"
                 class="d-inline-block align-text-top">
            Nostra
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="{{ path('app_order_index') }}">Commandes</a>
                <a class="nav-link" href="{{ path('app_client_index') }}">Clients</a>
            </div>
        </div>
    </div>
</nav>
<body>
<main class="container-xxl py-5">
    {% block body %}{% endblock %}
</main>
{# </div> #}
</body>
</html>
