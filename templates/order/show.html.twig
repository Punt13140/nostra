{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>OrderedAt</th>
                <td>{{ order.orderedAt ? order.orderedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ order.designation }}</td>
            </tr>
            <tr>
                <th>ItemCount</th>
                <td>{{ order.itemCount }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ order.observation }}</td>
            </tr>
            <tr>
                <th>RefId</th>
                <td>{{ order.refId }}</td>
            </tr>
            <tr>
                <th>ExitedAt</th>
                <td>{{ order.exitedAt ? order.exitedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
